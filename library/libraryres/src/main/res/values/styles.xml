<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="RootDefault">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppbarDefault">
        <item name="fabAnimationMode">slide</item>
        <item name="fabCradleMargin">@dimen/body_8dp</item>
        <item name="elevation">@dimen/body_8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetEndWithActions" tools:targetApi="n">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation" tools:targetApi="n">0dp</item>
    </style>

    <style name="AppbarDefault.WithHideOnScroll" parent="AppbarDefault">
        <item name="hideOnScroll">true</item>
    </style>

    <style name="FabDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/body_4dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextFieldBoxDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/body_56dp</item>
        <item name="android:layout_marginRight">@dimen/body_56dp</item>
        <item name="android:minHeight">@dimen/body_56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/body_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/body_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/body_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/body_8dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextFieldInputDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextFieldInputDefault.Normal" parent="TextFieldInputDefault">
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="TextFieldInputDefault.Normal.Bold" parent="TextFieldInputDefault.Normal">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
    </style>

    <style name="TextExtraSmall" parent="TextNormal">
        <item name="android:textSize">@dimen/text_10sp</item>
    </style>

    <style name="TextSmall" parent="TextNormal">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="TextNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBig" parent="TextNormal">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="TextExtraBig" parent="TextNormal">
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/body_56dp</item>
        <item name="android:layout_marginRight">@dimen/body_56dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">@dimen/body_56dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="fontFamily">@font/notosanskr_bold</item>
        <item name="cornerRadius">@dimen/body_4dp</item>
        <item name="elevation">@dimen/body_8dp</item>
    </style>

    <style name="ButtonDefault.Disable" parent="ButtonDefault">
        <item name="android:background">@color/grayButton</item>
        <item name="android:textColor">@color/grayText</item>
        <item name="android:minHeight">@dimen/body_55dp</item>
    </style>

    <style name="BottomSheetDialogTransparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>