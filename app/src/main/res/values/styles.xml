<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RootDefault">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppbarDefault">
        <item name="fabAnimationMode">slide</item>
        <item name="fabCradleMargin">@dimen/dimen_8dp</item>
        <item name="elevation">@dimen/dimen_8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetEndWithActions" tools:targetApi="n">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation" tools:targetApi="n">0dp</item>
    </style>

    <style name="AppbarDefault.WithHideOnScroll" parent="AppbarDefault">
        <item name="hideOnScroll">true</item>
    </style>

    <style name="FabDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/dimen_4dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/white</item>
    </style>
</resources>